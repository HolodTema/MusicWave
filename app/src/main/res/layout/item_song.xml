<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_item_song_right_corners_not_chosen"
    android:padding="8dp"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="8dp"
        android:layout_marginEnd="8dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_item_song"
            tools:src="@drawable/song_icon_lana"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_item_song_name"
            tools:text="Diet mountain dew"
            style="@style/text16.on_background_primary" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_item_song_author"
            style="@style/text16.on_background_secondary"
            tools:text="Lana Del Rey"/>
    </LinearLayout>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/image_item_song_more"
        android:src="@drawable/ic_more"
        app:tint="?attr/color_text_on_background_primary"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"/>
</LinearLayout>